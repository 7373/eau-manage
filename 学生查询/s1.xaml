<Window x:Class="WpfApplication1.s1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="学生成绩按每学年成绩统计" Height="250.5" Width="343.5">
    <Grid>
        <Label x:Name="label" Content="请输入学生的学号：" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="0,84,0,0" VerticalAlignment="Top" Height="135" Width="336" ItemsSource="{Binding Path=table1}"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="133,31,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="44"/>
        <Button x:Name="button" Content="查询" HorizontalAlignment="Left" Margin="208,31,0,0" VerticalAlignment="Top" Width="44" Click="button_Click"/>
        <Button x:Name="button1" Content="返回" HorizontalAlignment="Left" Margin="270,31,0,0" VerticalAlignment="Top" Width="44" Click="button1_Click"/>

    </Grid>
</Window>
