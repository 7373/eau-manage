<Window x:Class="WpfApplication1.s3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="学生成绩查询" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="请输入学生的学号：" HorizontalAlignment="Left" Margin="0,36,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="123,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="40"/>
        <Button x:Name="button" Content="查询" HorizontalAlignment="Left" Margin="180,36,0,0" VerticalAlignment="Top" Width="44" Click="button_Click"/>
        <Button x:Name="button1" Content="返回" HorizontalAlignment="Left" Margin="238,36,0,0" VerticalAlignment="Top" Width="44" Click="button1_Click"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="0,94,0,0" VerticalAlignment="Top" Height="176" Width="292" ItemsSource="{Binding Path=table1}"/>

    </Grid>
</Window>
